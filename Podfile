source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

target 'CrashProbeiOS' do
    platform :ios, '8.0'
    pod 'Sentry', :git => 'https://github.com/getsentry/sentry-swift.git', :tag => '2.1.3'
end

target 'CrashProbe' do
    platform :osx, '10.10'
    pod 'Sentry', :git => 'https://github.com/getsentry/sentry-swift.git', :tag => '2.1.3'
end
